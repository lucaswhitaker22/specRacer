{
  "name": "text-racing-mmo-backend",
  "version": "1.0.0",
  "description": "Backend server for Text Racing MMO game",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "db:create": "node setup-database.js",
    "db:reset": "node reset-database.js",
    "db:init": "ts-node src/database/init.ts",
    "db:seed": "ts-node src/database/seed.ts",
    "db:seed-cars": "ts-node src/database/seedCars.ts",
    "db:setup": "npm run db:create && npm run db:init && npm run db:seed-cars"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "redis": "^4.6.8",
    "socket.io": "^4.7.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.4",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.5.0",
    "@types/pg": "^8.10.2",
    "@types/socket.io-client": "^1.4.36",
    "@types/supertest": "^6.0.3",
    "jest": "^29.6.2",
    "socket.io-client": "^4.8.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6"
  },
  "keywords": [
    "racing",
    "mmo",
    "game",
    "websocket"
  ],
  "author": "",
  "license": "MIT"
}
